<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>


    <%if(customData.imgbg_on == 1){%>
        <body style="background: <%=customData.imgbg%>; background-size: cover;">
    <%}%>
    <%if(customData.imgbg_on == 0){%>
        <body style="background-color: <%=customData.colbg%>;">
    <%}%>

    <div class="container">

        <!-- Update Color Card -->
        <div class="card" style="width: 16rem;">
            <div class="card-body">
                <div class="row">
                        
                        <div class="col">
                            Background Color
                            <br>
                            <form action="/customize/addColBG" method="post">
                            <button type = "submit" class="btn btn-primary" name = "colBG" id = "colBG"
                             onclick="changeBGColor()">Update</button>
                            </form>
                        </div>
                        <div class="col">
                            <input type="color" id="colBG_input" value="<%=customData.colbg%>""
                            style="width: 4rem; height: 4rem;"
                            >
                        </div>
                   
                </div>
            </div>
        </div>

        <!-- Update Image Card -->
        <div class="card" style="width: 24rem;">
            <div class="card-body">
                <div class="row">
         
                    <div class="col">
                        Background Image
                        <br>
                        <form action="/customize/addImgBG" method="post">
                        <button type = "submit" class="btn btn-primary" name = "imgBG" id = "imgBG" value="" onclick="changeBGImage()">Update</button>
                        </form>
                   </div>
                    <div class="col">
                        <div class="input-group mb-3">
                            <input type="url" id = "myImg" class="form-control">
                        </div>
                    </div>

                </div>
            </div>
        </div>

       



    </div>

    <!-- Update the color -->
    <script>
        function changeBGColor()
        {
            let color = document.getElementById("colBG_input").value;
            document.body.style.background = "";
            document.body.style.backgroundColor = color;
            document.getElementById("colBG").value = color;
        }
    </script>


    <!-- update to an image -->
    <script>
        function changeBGImage()
        {
            let image = document.getElementById("myImg").value;
            document.body.style.background = "url("+ image + ")";
            document.getElementById("imgBG").value = "url("+ image + ")";
        }
    </script>



